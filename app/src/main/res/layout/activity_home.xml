<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btnPastDrills"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:onClick="onPastDrillsClick"
        android:text="Past Drills"
        app:backgroundTint="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/activity_vertical_margin"
        app:layout_constraintBottom_toTopOf="@+id/btnPastDrills"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvSetupDrillText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/drill_setup_text"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_start_drill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start"
            app:backgroundTint="@color/colorPrimary"
            android:padding="30dp"
            />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnStraightToDraw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onHomeStraightToDrawClick"
            android:text="Straight to draw"
            app:backgroundTint="@color/colorPrimary"
            android:visibility="gone"
            />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>